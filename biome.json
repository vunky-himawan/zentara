{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [".github", "dist", "node_modules"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "include": ["**/*.ts", "**/*.tsx"],
    "ignore": ["node_modules", "dist", "storybook-static"],
    "lineWidth": 100
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true }
  },
  "javascript": { "formatter": { "quoteStyle": "double" } }
}
