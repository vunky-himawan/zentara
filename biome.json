{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [".github", "dist", "node_modules"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"include": ["**/*.ts", "**/*.tsx"],
		"ignore": ["node_modules", "dist", "storybook-static"],
		"lineWidth": 100,
		"bracketSpacing": true,
		"lineEnding": "lf"
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all",
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded"
		}
	}
}
